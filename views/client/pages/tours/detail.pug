extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/moment.pug
block main
  .tour-detail
    .container.my-3
      .row
        .col-6
          if(tour.images)
            .inner-images
              div(class="swiper imagesMain") 
                div(class="swiper-wrapper")
                  each image in tour.images
                    div(class="swiper-slide")
                      .inner-image
                        img(src=image) 
                div(class="swiper-button-next")              
                div(class="swiper-button-prev")  
                  
              div(class="swiper imagesThumb") 
                div(class="swiper-wrapper")
                  each image in tour.images
                    div(class="swiper-slide")
                      .inner-image
                        img(src=image)           
        .col-6
          .inner-title #{tour.title}
          .inner-barcode
            <i class="fa-solid fa-barcode"></i> Mã tour: #{tour.code}
          .inner-time-start
            <i class="fa-solid fa-calendar-days"></i> Lịch khởi hành: 
            +formatDateTime(tour.timeStart)
          .inner-stock
            <i class="fa-solid fa-person-walking-luggage"></i> #{tour.stock} chỗ
          .inner-price-special #{tour.price_special.toLocaleString()}đ
          .inner-price #{tour.price.toLocaleString()}đ
          .inner-percent Giảm tới #{tour.discount}%
          form(
            form-add-to-cart
            tour-id=tour.id
          )
            input(
              class="form-control mb-2"
              type="number"
              name="quantity"
              value="1"
              min="1"
              max=tour.stock
            )
            button(
              type="submit"
              class="btn btn-success btn-block"
            ) Thêm vào giỏ hàng
          
      .row
        .col-12
          .inner-infomation
            .inner-label Thông tin tour
            .inner-text
              | !{tour.information}
        
        .col-12
          .inner-infomation
            .inner-label Lịch trình tour
            .inner-text
               | !{tour.schedule}